<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="15px"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio 2"
            android:textSize="14pt"
            android:textAlignment="center"
            android:layout_marginTop="20px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contar letras"
            android:textSize="8pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ex2_textInput"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:hint="Escriba..."
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/ex2_charInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="A"
            android:textSize="30sp"
            android:maxLength="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Processar"
            android:onClick="processAsText"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ex2_limitInput"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limitar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="80dp"
            android:hint="A's: "
            android:id="@+id/ex2_countLalbel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ex2_charsCount"
            android:text="  "
            android:hint="..."
            android:textSize="80dp"/>
    </LinearLayout>
</LinearLayout>